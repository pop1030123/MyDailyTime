<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:background="@color/main_color_normal"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_light"
            android:gravity="center"
            android:paddingLeft="@dimen/button_paddingLR"
            android:paddingRight="@dimen/button_paddingLR"
            android:paddingTop="@dimen/button_paddingTB"
            android:paddingBottom="@dimen/button_paddingTB"
            android:text="@string/back"
            android:textColor="@color/text_color_light"/>
    </LinearLayout>

    <TextView
        android:id="@+id/center_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="title"
        android:textColor="@color/c_white"
        android:textSize="@dimen/title_size"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_light"
            android:gravity="center"
            android:paddingLeft="@dimen/button_paddingLR"
            android:paddingRight="@dimen/button_paddingLR"
            android:paddingTop="@dimen/button_paddingTB"
            android:paddingBottom="@dimen/button_paddingTB"
            android:textColor="@color/text_color_light"/>
    </LinearLayout>

</LinearLayout>